{
    "build":  {
                  "beforeBuildCommand":  "npm run build",
                  "beforeDevCommand":  "npm run dev",
                  "frontendDist":  "../dist",
                  "devUrl":  "http://localhost:5173"
              },
    "bundle":  {
                   "active":  true,
                   "targets":  "all",
                   "icon":  [
                                "icons/32x32.png",
                                "icons/128x128.png",
                                "icons/128x128@2x.png",
                                "icons/icon.icns",
                                "icons/icon.ico"
                            ],
                   "resources":  [

                                 ],
                   "windows": {
                       "nsis": {
                           "installerIcon": "./icons/icon.ico",
                           "headerImage": "./icons/nsis-header.bmp",
                           "sidebarImage": "./icons/nsis-sidebar.bmp",
                           "installMode": "both",
                           "languages": ["SimpChinese", "English"],
                           "displayLanguageSelector": true,
                           "installerHooks": "./nsis/installer-hooks.nsh"
                       },
                       "wix": {
                           "language": {
                               "zh-CN": {
                                   "localePath": "./wix/locales/zh-CN.wxl"
                               },
                               "en-US": {
                                   "localePath": "./wix/locales/en-US.wxl"
                               }
                           }
                       },
                       "webviewInstallMode": {
                           "type": "embedBootstrapper",
                           "silent": true
                       }
                   }
               },
    "productName":  "Pyra",
    "mainBinaryName":  "Pyra",
    "version":  "0.1.1",
    "identifier":  "com.pyra.ide",
    "plugins":  {

                },
    "app":  {
                "withGlobalTauri":  false,
                "windows":  [
                                {
                                    "label":  "main",
                                    "fullscreen":  false,
                                    "resizable":  true,
                                    "title":  "Pyra IDE",
                                    "decorations":  false,
                                    "width":  1200,
                                    "height":  800,
                                    "minWidth":  800,
                                    "minHeight":  600,
                                    "center": true,
                                    "visible": true,
                                    "maximized": false,
                                    "focus": true,
                                    "useHttpsScheme":  true
                                }
                            ],
                "security":  {
                                 "csp":  null
                             }
            }
}